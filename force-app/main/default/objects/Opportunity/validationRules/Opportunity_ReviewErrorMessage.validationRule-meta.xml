<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Opportunity_ReviewErrorMessage</fullName>
    <active>true</active>
    <errorConditionFormula>AND( NOT(ISBLANK(ErrorMessage__c)),
 ISCHANGED(StageName) )</errorConditionFormula>
    <errorMessage>Please review the error message in this opportunity!</errorMessage>
</ValidationRule>
