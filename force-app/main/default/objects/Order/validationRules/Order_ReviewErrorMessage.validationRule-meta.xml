<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Order_ReviewErrorMessage</fullName>
    <active>true</active>
    <errorConditionFormula>AND( NOT(ISBLANK(ErrorMessage__c)),
 ISCHANGED(Status))</errorConditionFormula>
    <errorMessage>Please review the error message in this order!</errorMessage>
</ValidationRule>
